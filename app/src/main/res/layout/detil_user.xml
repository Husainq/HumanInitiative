<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/o_email"
        android:background="@drawable/border2"
        android:layout_marginTop="60dp"
        android:padding="8dp"
        android:ems="10"
        android:text="Email"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/o_username"
        android:background="@drawable/border2"
        android:layout_marginTop="60dp"
        android:padding="8dp"
        android:ems="10"
        android:text="Username"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/o_email"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/o_nohphone"
        android:background="@drawable/border2"
        android:layout_marginTop="60dp"
        android:padding="8dp"
        android:ems="10"
        android:text="No Handphone"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/o_username"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/o_password"
        android:background="@drawable/border2"
        android:layout_marginTop="60dp"
        android:padding="8dp"
        android:ems="10"
        android:text="Password"
        android:password="true"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/o_nohphone"/>

    <Button
        android:id="@+id/btnUbahUp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:text="Ubah data"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/o_password" />

    <Button
        android:id="@+id/btnCancelUp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape_cancel"
        android:textColor="@color/white"
        android:text="Cancel"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnUbahUp" />
</androidx.constraintlayout.widget.ConstraintLayout>